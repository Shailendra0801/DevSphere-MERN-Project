# Production Environment Variables
NODE_ENV=production
PORT=5000

# MongoDB Configuration - UPDATE WITH YOUR PRODUCTION DATABASE
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Security
JWT_SECRET=your_production_jwt_secret_key_here_make_it_very_long_and_random
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS) - UPDATE WITH YOUR PRODUCTION FRONTEND URL
FRONTEND_URL=https://yourdomain.com

# Email Configuration
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_USER=your-production@email.com
EMAIL_PASS=your-email-password

# Logging
LOG_LEVEL=warn

# API Configuration
API_VERSION=v1